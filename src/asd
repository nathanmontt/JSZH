'use strict';

// Exemplo de dados: um array de objetos com título e conteúdo (linhas de texto)
const contentDesc = [
  {
    titleClass: "Início das Aulas",
    content: [
      "Fiz uma introdução às variáveis e tipos de dados.",
      "Pratiquei exercícios sobre estruturas condicionais."
    ]
  },
  {
    titleClass: "Projeto Web",
    content: [
      "Desenvolvi um layout responsivo.",
      "Estudei boas práticas de CSS e SMACSS."
    ]
  },
  {
    titleClass: "Revisão e Dúvidas",
    content: [
      "Revisei os conceitos de JavaScript.",
      "Anotei dúvidas para consultar o mentor."
    ]
  }
];

// Seleciona o container onde os conteúdos dinâmicos serão inseridos
const containerExplanation = document.querySelector('.container-explanation-text');

// Função para renderizar cada bloco de conteúdo dinâmico
function renderDynamicContent(contentData) {
  // Cria um contêiner para o bloco dinâmico
  const blockContainer = document.createElement('div');
  blockContainer.classList.add('dynamic-block');

  // Cria um elemento para o título dinâmico (titleClass)
  const titleEl = document.createElement('h4');
  titleEl.classList.add('dynamic-title');
  titleEl.textContent = contentData.titleClass;
  blockContainer.appendChild(titleEl);

  // Para cada linha do conteúdo, cria um parágrafo e o adiciona ao bloco
  contentData.content.forEach(line => {
    const p = document.createElement('p');
    p.classList.add('dynamic-content');
    p.textContent = line;
    blockContainer.appendChild(p);
  });

  // Cria e adiciona uma linha separadora (hr) ao final do bloco
  const separator = document.createElement('hr');
  blockContainer.appendChild(separator);

  return blockContainer;
}

// Função principal que renderiza todos os blocos de conteúdo
function renderAllDynamicContent() {
  // Limpa o container, caso já haja conteúdo
  containerExplanation.innerHTML = '';

  // Percorre cada objeto no array contentDesc e adiciona o bloco renderizado ao container
  contentDesc.forEach(item => {
    const block = renderDynamicContent(item);
    containerExplanation.appendChild(block);
  });
}

// Chama a função de renderização quando o DOM estiver carregado
document.addEventListener('DOMContentLoaded', renderAllDynamicContent);
